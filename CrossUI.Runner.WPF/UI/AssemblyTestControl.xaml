<UserControl x:Class="CrossUI.Runner.WPF.UI.AssemblyTestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:WPF="clr-namespace:CrossUI.Runner.WPF"
             xmlns:UI="clr-namespace:CrossUI.Runner.WPF.UI" mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800" Margin="0,0,0,12">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="6.18*"></ColumnDefinition>
			<ColumnDefinition Width="3.82*"></ColumnDefinition>
		</Grid.ColumnDefinitions>

		<Grid Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition/>
			</Grid.RowDefinitions>

			<Grid Grid.Row="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
				<Label Name="Title">Title</Label>
				<Button Grid.Column="1" Padding="5,1" FontWeight="Bold">X</Button>
			</Grid>

			<TreeView Grid.Row="1">
			</TreeView>
		</Grid>
	</Grid>
</UserControl>
